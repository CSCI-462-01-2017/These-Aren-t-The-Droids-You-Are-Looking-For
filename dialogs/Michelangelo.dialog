Beginning of new chat dialog for character="XXXXX"

EveryTime LuaCode={
	if (not has_cookie("met_michelangelo")) then
		show(0)
		add_cookie("met_michelangelo")
	else end

	if (has_quest("Anything but the army snacks, please!")) then
		if (done_quest("Anything but the army snacks, please!")) then
			show(24)
			if (has_quest("SADD's power supply")) then
				if (done_quest("SADD's power supply")) then 
					hide(75, 76, 77)
				else
					if (has_item_backpack("Red Dilithium Crystal") < 1) then show(40, 75) else end
				end																	
			else end 
		else						
			if (has_item_backpack("Red Dilithium Crystal") > 2) then
				show(29)	
			else 
				show(31, 32, 40)
				if (has_cookie("asked_michelangelo_for_army_snacks")) then show(26) else show(12) end
			end
		end
	else end
	show(99)
}
